<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.rtisas.sas.view.MapView">

    <androidx.appcompat.widget.Toolbar
        style="@style/ToolBar"
        android:weightSum="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginbig">

            <TextView
                style="@style/Title"
                android:id="@+id/title"
                android:text="@string/app_version"/>

            <ImageView
                android:id="@+id/waze"
                android:layout_width="@dimen/sizebar"
                android:layout_height="@dimen/sizebar"
                android:padding="@dimen/marginmedium"
                android:layout_gravity="end"
                android:src="@mipmap/ic_waze" />

            <ImageView
                android:id="@+id/info"
                android:layout_width="@dimen/sizebar"
                android:layout_height="@dimen/sizebar"
                android:padding="@dimen/marginmedium"
                android:src="@drawable/help"
                android:layout_gravity="start"/>

        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        style="@style/Text"
        android:id="@+id/content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/margin"
        android:paddingStart="@dimen/margin"
        android:background="@color/colorPrimaryDark">

        <TextView
            style="@style/Text2"
            android:id="@+id/source"
            android:text="@string/source"
            android:maxLines="1"
            android:drawableStart="@drawable/sources"/>

        <TextView
            style="@style/Text2"
            android:id="@+id/destination"
            android:text="@string/destination"
            android:layout_marginTop="@dimen/margin"
            android:maxLines="1"
            android:drawableStart="@drawable/destination"/>

    </LinearLayout>

    <FrameLayout style="@style/Content1">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:uiCompass="true" />

        <TextView
            style="@style/TextButton"
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:text="Seleccionar Origen"
            android:background="@drawable/button3"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginStart="@dimen/sizebar"
            android:layout_marginEnd="@dimen/sizebar"
            android:paddingStart="@dimen/sizebar"
            android:paddingTop="@dimen/marginmedium"
            android:paddingBottom="@dimen/marginmedium"
            android:paddingEnd="@dimen/sizebar"
            android:alpha="0.8"/>

        <LinearLayout
            android:id="@+id/fragment"
            style="@style/Content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content1"
            style="@style/Content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/marginbig"
            android:visibility="visible">

            <ListView
                android:id="@+id/history"
                style="@style/Content">

            </ListView>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        style="@style/Text"
        android:id="@+id/infotravel"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        style="@style/Content1"
        android:id="@+id/infouser"
        android:layout_weight="0"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo"
                android:layout_width="@dimen/photo"
                android:layout_height="@dimen/photo"
                android:layout_gravity="center"
                android:layout_margin="@dimen/marginsmall"
                android:src="@drawable/perfil" />

            <RatingBar
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:id="@+id/qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginsmall"
                android:rating="4" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:padding="@dimen/marginmedium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Text5"
                        android:id="@+id/row0"
                        android:maxLines="1"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text5"
                            android:id="@+id/row1"
                            android:maxLines="1"
                            android:gravity="start"/>

                        <TextView
                            style="@style/Text5"
                            android:id="@+id/row3"
                            android:maxLines="1"
                            android:gravity="start"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/row2"
                        style="@style/Text5"
                        android:maxLines="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">


                    <TextView
                        style="@style/Text5"
                        android:id="@+id/mins"
                        android:text="m"
                        app:drawableTopCompat="@drawable/timerw" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/Text5"
                android:id="@+id/row4"
                android:gravity="start"
                android:maxLines="1"/>

        </LinearLayout>

    </LinearLayout>

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom" />

    <TextView
        style="@style/Text"
        android:id="@+id/triger"
        android:background="@color/colorRed"
        android:textColor="@color/colorWhite"
        android:text="@string/internetEA"
        android:visibility="gone"/>

</LinearLayout>
