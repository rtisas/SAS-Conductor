<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/received"
        android:layout_width="@dimen/textMbig"
        android:layout_height="@dimen/textMbig"
        android:layout_marginEnd="@dimen/marginsmall"
        android:layout_marginTop="@dimen/margin"
        android:layout_gravity=""
        android:src="@drawable/reserva"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/Text"
                android:text="@string/idservice"
                android:layout_margin="@dimen/line"
                android:textStyle="bold"
                android:textSize="@dimen/textbig"/>

            <TextView
                style="@style/Text"
                android:id="@+id/idservice"
                android:layout_margin="@dimen/line"
                android:maxLines="1"
                android:textSize="@dimen/textbig"/>

        </LinearLayout>

        <TextView
            style="@style/Text"
            android:id="@+id/name"
            android:maxLines="1"
            android:gravity="start"
            android:textStyle="bold"
            android:text="@string/textDefautl"
            android:layout_margin="@dimen/line"/>
        <TextView
            style="@style/Text"
            android:id="@+id/source"
            android:maxLines="1"
            android:gravity="start"
            android:text="@string/textDefautl"
            android:layout_margin="@dimen/line"/>
        <TextView
            style="@style/Text"
            android:id="@+id/destination"
            android:maxLines="1"
            android:gravity="start"
            android:text="@string/textDefautl"
            android:layout_margin="@dimen/line"/>
        <TextView
            style="@style/Text"
            android:id="@+id/date"
            android:maxLines="1"
            android:gravity="start"
            android:textSize="@dimen/textsmall"
            android:text="@string/textDefautl"
            android:layout_margin="@dimen/line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextLink"
            android:id="@+id/cancel"
            android:layout_weight="1"
            android:text="@string/cancelar"
            android:paddingStart="@dimen/margin" />

        <TextView
            style="@style/TextLink"
            android:id="@+id/pending"
            android:layout_weight="1"
            android:text="@string/pending"
            android:paddingStart="@dimen/margin" />

    </LinearLayout>

</LinearLayout>